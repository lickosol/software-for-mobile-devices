<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/image1"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Добро пожаловать!"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:text="Регистрация"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@id/welcome"
        app:layout_constraintTop_toBottomOf="@id/welcome" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="32dp"
        android:text="По номеру"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/registration"
        app:layout_constraintTop_toBottomOf="@id/registration" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="32dp"
        android:text="По email"
        android:background="#90ffffff"
        android:textColor="#505e23"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/registration"
        app:layout_constraintTop_toBottomOf="@id/registration" />
    <EditText
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:hint="Введите email"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:inputType="textEmailAddress"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/number"
        app:layout_constraintTop_toBottomOf="@id/number"
         />

    <EditText
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Введите пароль"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:inputType="text"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/mail"
        app:layout_constraintTop_toBottomOf="@id/mail"
         />


    <EditText
        android:id="@+id/again_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Повторите пароль"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:inputType="text"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/pw"
        app:layout_constraintTop_toBottomOf="@id/pw"
         />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#add827"
        android:text="Зарегистрироваться"
        app:layout_constraintStart_toStartOf="@id/again_pw"
        app:layout_constraintTop_toBottomOf="@id/again_pw"
        android:textSize="20dp"
         />


</androidx.constraintlayout.widget.ConstraintLayout>