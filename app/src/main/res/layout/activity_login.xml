<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/image1"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Добро пожаловать!"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="148dp"
        android:background="#90ffffff"
        android:text="Вход"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@id/welcome"
        app:layout_constraintTop_toBottomOf="@id/welcome" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="-76dp"
        android:hint="Введите email/пароль"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:inputType="textEmailAddress"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/enter"
        app:layout_constraintTop_toBottomOf="@id/enter"
        />

    <EditText
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Введите пароль"
        android:textColor="@color/black"
        android:background="#90ffffff"
        android:inputType="text"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/mail"
        app:layout_constraintTop_toBottomOf="@id/mail"
        />


    <CheckBox
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#90ffffff"
        android:hint="Входить автоматически"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/pw"
        app:layout_constraintTop_toBottomOf="@id/pw"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#add827"
        android:text="Войти"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/flag"
        app:layout_constraintTop_toBottomOf="@id/flag" />


</androidx.constraintlayout.widget.ConstraintLayout>